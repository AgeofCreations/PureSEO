Sub equality()
Dim i As Integer
Dim e As Integer
Dim val As Variant
Dim valu As Variant
Dim PosStr As Long
PosStr = Cells(1, 1).End(xlDown).Row
i = 1
e = 1
    ActiveCell.Select 'Выбираем А1
    For i = 1 To PosStr
        val = ActiveCell.Value 'Присваиваем val значение ячейки
        ActiveCell.Offset(1, 0).Select 'Выбираем следующую ячейку
        valu = ActiveCell.Value 'Присваиваем valu значение ячейки
    If val = valu Then
    Selection.EntireRow.Delete
    ActiveCell.Offset(-1, 0).Select
    ElseIf ActiveCell.Value < 2 Or val < 2 Then Exit For
    Else: val = ActiveCell.Value
    End If
    Next i ' Повторяем
End Sub
